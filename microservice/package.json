{
  "name": "responses-microservice",
  "version": "1.0.0",
  "description": "Microservice wrapper for @iqb/responses",
  "main": "dist/microservice/src/server.js",
  "scripts": {
    "start": "node dist/microservice/src/server.js",
    "dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc && cp src/index.html dist/microservice/src/index.html",
    "docker:build": "./docker-build.sh",
    "docker:run": "./docker-run.sh",
    "docker:tag": "./docker-tag.sh",
    "docker:publish": "./docker-publish.sh"
  },
  "dependencies": {
    "@iqb/responses": "file:..",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^20.12.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
